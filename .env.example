# Application Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/eventmanagement
MONGODB_TEST_URI=mongodb://localhost:27017/eventmanagement_test

# Security Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=1h
REFRESH_TOKEN_SECRET=your_refresh_token_secret
PASSWORD_SALT_ROUNDS=10

# OAuth Providers
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Two-Factor Authentication
TWO_FACTOR_ISSUER=EventManagementPlatform

# Threat Intelligence Providers
VIRUSTOTAL_API_KEY=your_virustotal_api_key
ABUSEIPDB_API_KEY=your_abuseipdb_api_key
HYBRIDANALYSIS_API_KEY=your_hybridanalysis_api_key

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=15 * 60 * 1000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring Configuration
SYSTEM_HEALTH_CHECK_INTERVAL=30 * 60 * 1000

# Feature Flags
ENABLE_OAUTH=true
ENABLE_TWO_FACTOR=true
ENABLE_THREAT_INTELLIGENCE=true
